generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma-client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Post {
    domain String   @id
    url    String
    type   PostType

    content    String
    updatedAt  DateTime?
    authorName String?
}

enum PostType {
    NOW
    IDEAS
}

model ScrapeState {
    domain String @id
    url    String

    status   ScrapeStatus
    scapedAt DateTime?
}

enum ScrapeStatus {
    UNAVAILABLE
    NO_CONTENT
    SCRAPED
}
